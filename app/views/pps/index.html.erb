
<h1>Listing Pps</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Trade name</th>
      <th>Active ingridient</th>
      <th>Reason</th>
      <th>Amount</th>
      <th>Application method</th>
      <th>Tech responsible</th>
      <th>Operator</th>
      <th>Persons</th>
      <th>Note</th>
      <th>Production</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pps.each do |pp| %>
      <tr>
        <td><%= pp.date %></td>
        <td><%= pp.trade_name %></td>
        <td><%= pp.active_ingridient %></td>
        <td><%= pp.reason %></td>
        <td><%= pp.amount %></td>
        <td><%= pp.application_method %></td>
        <td><%= pp.tech_responsible %></td>
        <td><%= pp.operator %></td>
        <td><%= pp.persons %></td>
        <td><%= pp.note %></td>
        <td><%= pp.production_id %></td>
        <td><%= link_to 'Show', pp %></td>
        <td><%= link_to 'Edit', edit_pp_path(pp) %></td>
        <td><%= link_to 'Destroy', pp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

