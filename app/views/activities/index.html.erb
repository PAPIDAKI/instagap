
<h1>Listing Activities</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Note</th>
      <th>Operator</th>
      <th>Persons</th>
      <th>Approved by</th>
      <th>Production</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <%=link_to "#{activity.date} #{activity.type}
                       #{activity.note} #{activity.operator} #{activity.persons} #{activity.approved_by}"%>
        <td><%= activity.date %></td>
        <td><%= activity.type %></td>
        <td><%= activity.note %></td>
        <td><%= activity.operator %></td>
        <td><%= activity.persons %></td>
        <td><%= activity.approved_by %></td>
        <td><%= link_to 'Show' %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

