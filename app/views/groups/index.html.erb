<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.address %></td>
        <td><%= group.phone %></td>
        <td><%= group.email %></td>
        <td><%= link_to 'Show', group ,class:'btn btn-link' %></td>
        <td><%= link_to 'Edit', edit_group_path(group),class:'btn btn-link'  %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-link'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path ,class:'btn btn-link' %>
