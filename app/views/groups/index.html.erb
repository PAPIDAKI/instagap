


<h3>
<%=link_to "+ Start a new Group",new_group_path%></h3>
<br>


<!-- <div class='container'> -->
  <div class='row'>
  <div class='col-md-6'>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th class='col-md-1'></th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr data-link="<%=group_path(group)%>">
        <td><%= image_tag group.avatar_url(:thumb),class:'img-rounded'if group.avatar? %></td>
        <td><%= group.name %></td>
        <td><%= group.address %></td>
        <td><%= group.phone %></td>
        <td><%= group.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

