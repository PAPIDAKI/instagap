<p id="notice"><%= notice %></p>

<h1>Listing Produces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produces.each do |produce| %>
      <tr>
        <td><%= produce.name %></td>
        <td><%= link_to 'Show', produce,class:'btn btn-link'  %></td>
        <td><%= link_to 'Edit', edit_produce_path(produce) ,class:'btn btn-link' %></td>
        <td><%= link_to 'Destroy', produce, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Produce', new_produce_path,class:'btn btn-link'  %>
