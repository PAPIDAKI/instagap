<p id="notice"><%= notice %></p>

<h1>Listing Fertilizations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Type</th>
      <th>Concentration</th>
      <th>Amount</th>
      <th>Application method</th>
      <th>Machinery</th>
      <th>Approved by</th>
      <th>Operator</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fertilizations.each do |fertilization| %>
      <tr>
        <td><%= fertilization.date %></td>
        <td><%= fertilization.name %></td>
        <td><%= fertilization.typos %></td>
        <td><%= fertilization.concentration %></td>
        <td><%= fertilization.amount %></td>
        <td><%= fertilization.application_method %></td>
        <td><%= fertilization.machinery %></td>
        <td><%= fertilization.approved_by %></td>
        <td><%= fertilization.operator %></td>
        <td><%= fertilization.note %></td>
        <td><%= link_to 'Show', production_fertilization_path(@production,fertilization )%></td>
        <td><%= link_to 'Edit', edit_production_fertilization_path(@production,fertilization) %></td>
        <td><%= link_to 'Destroy', production_fertilization_path(@production,fertilization), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

