<p id="notice"><%= notice %></p>

<h1>Listing Pmus</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Location</th>
      <th>Grower</th>
      <th>Facilities</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pmus.each do |pmu| %>
      <tr>
        <td><%= pmu.address %></td>
        <td><%= pmu.location %></td>
        <td><%= pmu.grower %></td>
        <td><%= pmu.facilities %></td>
        <td><%= link_to 'Show', pmu ,class:'btn btn-link' %></td>
        <td><%= link_to 'Edit', edit_pmu_path(pmu),class:'btn btn-link'  %></td>
        <td><%= link_to 'Destroy', pmu, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-link'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pmu', new_pmu_path ,class:'btn btn-link' %>
