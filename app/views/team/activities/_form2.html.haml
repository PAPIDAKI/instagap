=simple_form_for [:team,@registration,@activity], html:{multipart:true} do |f|
	=f.collection_check_boxes :production_ids,@registration.productions,:id,:pmu_with_produce_and_variety,:item_wrapper_class=>'inline'
	=f.input :date 
	=f.input :note 
	=f.input :operator
	=f.input :approved_by
	%hr
	%h3 Quantities
	=f.input :name
	=f.input :qunatity
	=f.input :unit
	=f.input :phi	
	
	=f.submit class:'btn btn-default'