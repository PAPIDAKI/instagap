
<%=link_to "<<=Group(show)",@group%>

<div class="jumbotron">

<p>
  <strong>Name:</strong>
  <%= @registration.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @registration.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= @registration.role %>
</p>

<%= link_to 'Edit',edit_group_team_registration_path(@group,@registration),class:'btn btn-link'  %>
</div>
<hr>
<h3>Pmus</h3>

<%=link_to "Add Pmu",new_team_registration_pmu_path(@registration),class:'btn btn-link' %>
<%=@registration.pmus.count%>
<ol>
  <% @pmus.each do |pmu|%>
  <li><%=link_to pmu.address,team_registration_pmu_path(@registration,pmu)%></li>
      <%end%>
</ol>

<hr>

<h3>Logbook</h3>
<%=link_to '+ Fertilization',new_team_registration_fertilization_path(@registration)%> |
<%=link_to '+ Irrigation',new_team_registration_irrigation_path(@registration)%> |
<%=link_to '+ Phyto Protection',new_team_registration_protection_path(@registration)%> |
<%= link_to '+ Cultivation',new_team_registration_cultivation_path(@registration)%> |
<%=link_to '+ Harvesting',new_team_registration_harvesting_path(@registration)%>

<table class="table">
  <thead>
  <tr><th>Date</th><th>Activity</th><th>Καλιέργειες</th><th>Operator</th><th>Note</th><th>Approved By</th></tr>
  </thead>
  <tbody>
  <% @activities.each do |activity|%>
  <tr>

    <td><%=activity.date%></td>
    <td><%=activity.type%></td>
    <td><% activity.productions.each do |production|%>
          <li><%=production.pmu_with_produce_and_variety%></li>
          <%end%></td>
    <td><%=activity.operator%></td>
    <td><%=activity.note%></td>
    <td><%=activity.approved_by%></td>
    <td><%=link_to "Show",team_registration_activity_path(@registration,activity)%></td>
    <td><%=link_to "Delete",team_registration_activity_path(@registration,activity),method: :delete%></td>



  </tr>
  <%end%>
  </tbody>
</table>



<hr>
