<p id="notice"><%= notice %></p>

<h1>Listing Standards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @standards.each do |standard| %>
      <tr>
        <td><%= standard.name %></td>
        <td><%= link_to 'Show', standard,class:'btn btn-link'  %></td>
        <td><%= link_to 'Edit', edit_standard_path(standard) ,class:'btn btn-link' %></td>
        <td><%= link_to 'Destroy', standard, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Standard', new_standard_path %>
